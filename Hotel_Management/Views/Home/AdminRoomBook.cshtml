@model DataLayer.User

@{
    ViewBag.Title = "AdminRoomBook";
    Layout = "~/Views/shared/_HotelHomeLayout.cshtml";
}

<h2>AdminRoomBook</h2>


    <form class="form-horizontal" action="@Url.Action("AdminRoomBook","Home")" method="POST">

        <input type="hidden" name="Room_Id" value ="@ViewBag.id"/>
        <div class="form-group">
            <label class="control-label col-sm-4" for="email">Usename:</label>
            <div class="col-sm-5">
                @Html.EditorFor(model => model.User_Name)
                @Html.ValidationMessageFor(model => model.User_Name)
            <!--input type="email" class="form-control" id="email" placeholder="Enter username"-->
            </div>
        </div>
        @ViewBag.Message
              
        <div class="form-group">        
            <div class="col-sm-offset-4 col-sm-5">
             <button type="submit" class="btn btn-default">Log In</button><br/>
                If You dont have any User Name & Password then Please Sign Up First
            </div>
        </div>
    </form>

