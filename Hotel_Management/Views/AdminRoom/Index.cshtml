@model IEnumerable<DataLayer.Room>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_HotelAdminLayout.cshtml";
}

<h2>Room List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table border="1" class="table table-bordered table-hover">
    <tr>
        <th>Room Image</th>
        <th>
            @Html.DisplayNameFor(model => model.RoomNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
           Catagory
        </th>
        <th>Option</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/img/@Html.DisplayFor(modelItem => item.Picture)" class="img-rounded" alt="Cinque Terre" width="304" height="150">

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
