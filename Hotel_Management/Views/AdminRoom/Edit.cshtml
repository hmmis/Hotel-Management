@model DataLayer.Room

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/shared/_HotelAdminLayout.cshtml";
}

<h2>Edit Room</h2>

@using (Html.BeginForm("Edit", "AdminRoom",  FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Room</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.RoomNo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoomNo)
            @Html.ValidationMessageFor(model => model.RoomNo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Details)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Details)
            @Html.ValidationMessageFor(model => model.Details)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryId)
        </div>
        <div class="editor-field">
           @Html.DropDownList("CategoryId", (List<SelectListItem>)ViewBag.clist)
            @Html.ValidationMessageFor(model => model.CategoryId)
        </div>
          <div class="editor-field">
            Upload A New Room Picture
        </div>
        <div class="editor-field">
            <input id="Picture" title="Upload a new Room image"  type="file" name="file" />
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
